@model IEnumerable<UltraCryptoFolio.Models.ViewModels.TransactionViewModel>

@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@nameof(TransactionViewModel.DateTime)</th>
            <th>@nameof(TransactionViewModel.SpentCurrency)</th>
            <th>@nameof(TransactionViewModel.SpentCurrencyPrice)</th>
            <th>@nameof(TransactionViewModel.AmountSpent)</th>
            <th>@nameof(TransactionViewModel.ReceivedCurrency)</th>
            <th>@nameof(TransactionViewModel.ReceivedCurrencyPrice)</th>
            <th>@nameof(TransactionViewModel.AmountReceived)</th>
            <th>@nameof(TransactionViewModel.Fee)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
        <tr>
            <td>@transaction.DateTime</td>
            <td>@transaction.SpentCurrency</td>
            <td>@transaction.SpentCurrencyPrice</td>
            <td>@transaction.AmountSpent</td>
            <td>@transaction.ReceivedCurrency</td>
            <td>@transaction.ReceivedCurrencyPrice</td>
            <td>@transaction.AmountReceived</td>
            <td>@transaction.Fee</td>
        </tr>
        }
    </tbody>
</table>