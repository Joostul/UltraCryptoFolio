@model UltraCryptoFolio.Models.Portfolio

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Amount (in sathosi)</th>
            <th>Value (@Model.MonetaryCurrency)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var value in Model.CryptoValues)
        {
            <tr>
                <td>@value.CryptoCurrency</td>
                <td>@value.Amount</td>
                <td>@value.MonetaryValue</td>
            </tr>
        }

    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>Indicator</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Total value:</td>
            <td>@Model.TotalCryptoValue</td>
        </tr>
        <tr>
            <td>Total investment:</td>
            <td>@Model.TotalMonetaryValue</td>
        </tr>
        <tr>
            <td>Profit/loss:</td>
            <td>@Model.TotalProfit</td>
        </tr>
    </tbody>
</table>
