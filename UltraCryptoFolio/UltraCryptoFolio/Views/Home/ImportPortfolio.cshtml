
@{
    ViewData["Title"] = "ImportPortfolio";
}

<h2>ImportPortfolio</h2>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <div class="alert alert-danger">
        <strong>Warning!</strong> @ViewBag.Message
    </div>
}

<form enctype="multipart/form-data" asp-action="ImportPortfolio">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-md-2 control-label">Import file</label>
            <div class="col-md-10">
                <input type="file" class="form-control-file" name="file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Import" class="btn btn-default" />
        </div>
    </div>
</form>
